{
  "displayName": "Accounting Document Generator",
  "defaultWidth": 600,
  "defaultHeight": 400,
  "resizeX": true,
  "resizeY": true,
  "components": "./index.js",
  "icon": "./thumbnail.png",
  "props": [
    {
      "name": "type",
      "displayName": "PDF Generation Type",
      "type": "text",
      "control": {
        "type": "menu",
        "options": [
          {
            "value": "Quote",
            "label": "Quote"
          },
          {
            "value": "Invoice",
            "label": "Invoice"
          }
        ]
      }
    },
    {
      "name": "logoUrl",
      "displayName": "Logo URL",
      "type": "text"
    },
    {
      "name": "id",
      "displayName": "Document ID",
      "type": "text"
    },
    {
      "name": "clientId",
      "displayName": "Client ID",
      "type": "text"
    },
    {
      "name": "paymentTerms",
      "displayName": "Payment Terms",
      "type": "text"
    },
    {
      "name": "bankDetails",
      "displayName": "Bank Details",
      "type": "text"
    },
    {
      "name": "bottomNotes",
      "displayName": "Bottom Notes",
      "type": "text"
    },
    {
      "name": "footerNotes",
      "displayName": "Footer Notes",
      "type": "text"
    }
  ],
  "childComponents": [
    {
      "name": "company",
      "displayName": "Company Coordinates",
      "props": [
        {
          "name": "name",
          "displayName": "Company Name",
          "type": "text"
        },
        {
          "name": "street",
          "displayName": "Street",
          "type": "text"
        },
        {
          "name": "city",
          "displayName": "City",
          "type": "text"
        },
        {
          "name": "zipCode",
          "displayName": "Zip Code",
          "type": "text"
        },
        {
          "name": "country",
          "displayName": "Country",
          "type": "text"
        },
        {
          "name": "email",
          "displayName": "Email",
          "type": "text"
        },
        {
          "name": "phone",
          "displayName": "Phone",
          "type": "text"
        },
        {
          "name": "vatNumber",
          "displayName": "VAT Number",
          "type": "text"
        }
      ]
    },
    {
      "name": "client",
      "displayName": "Client Coordinates",
      "props": [
        {
          "name": "name",
          "displayName": "Client Name",
          "type": "text"
        },
        {
          "name": "street",
          "displayName": "Street",
          "type": "text"
        },
        {
          "name": "city",
          "displayName": "City",
          "type": "text"
        },
        {
          "name": "zipCode",
          "displayName": "Zip Code",
          "type": "text"
        },
        {
          "name": "country",
          "displayName": "Country",
          "type": "text"
        },
        {
          "name": "email",
          "displayName": "Email",
          "type": "text"
        },
        {
          "name": "phone",
          "displayName": "Phone",
          "type": "text"
        },
        {
          "name": "vatNumber",
          "displayName": "VAT Number",
          "type": "text"
        }
      ]
    },
    {
      "name": "Product Line",
      "role": "listItem",
      "reference": "products",
      "props": [
        {
          "name": "reference",
          "displayName": "Reference",
          "type": "text"
        },
        {
          "name": "description",
          "displayName": "Description",
          "type": "text"
        },
        {
          "name": "quantity",
          "displayName": "Quantity",
          "type": "number"
        },
        {
          "name": "unitPrice",
          "displayName": "Unit Price",
          "type": "number"
        },
        {
          "name": "vatRate",
          "displayName": "VAT Rate",
          "type": "number"
        }
      ]
    },
    {
      "name": "button",
      "displayName": "Button",
      "props": [
        {
          "name": "type",
          "displayName": "Type",
          "type": "text",
          "default": "contained",
          "control": {
            "type": "menu",
            "options": [
              {
                "label": "Text Button",
                "value": "text"
              },
              {
                "label": "Outlined Button",
                "value": "outlined"
              },
              {
                "label": "Contained Button",
                "value": "contained"
              },
              {
                "label": "Custom Button",
                "value": "custom"
              }
            ]
          },
          "style": true
        },
        {
          "name": "text",
          "displayName": "Text",
          "type": "text",
          "default": "Button",
          "styles": {
            "fontFamily": "@body",
            "fontWeight": "600"
          }
        },
        {
          "name": "icon",
          "displayName": "Icon",
          "type": "icon",
          "default": "add"
        },
        {
          "name": "sizing",
          "displayName": "Text & Icon Sizing",
          "type": "number",
          "default": "medium",
          "control": {
            "type": "menu",
            "options": [
              {
                "label": "Gigantic",
                "value": "gigantic"
              },
              {
                "label": "Extra large",
                "value": "extraLarge"
              },
              {
                "label": "Large",
                "value": "large"
              },
              {
                "label": "Medium",
                "value": "medium"
              },
              {
                "label": "Small",
                "value": "small"
              },
              {
                "label": "Extra small",
                "value": "extraSmall"
              }
            ]
          },
          "style": true
        },
        {
          "name": "primaryColor",
          "displayName": "Button Color",
          "type": "color",
          "default": "@primary",
          "style": true
        },
        {
          "name": "contrastColor",
          "displayName": "Icon & Text Color",
          "type": "color",
          "default": "@contrast:primaryColor",
          "enabled": {
            "type": [
              "contained",
              "custom"
            ]
          },
          "style": true
        },
        {
          "name": "border",
          "displayName": "Border",
          "type": "object",
          "control": {
            "type": "border"
          },
          "enabled": {
            "type": "custom"
          },
          "default": {
            "borderColor": "@primaryDark",
            "borderWidth": 1,
            "borderStyle": "solid"
          },
          "style": true
        },
        {
          "name": "advancedShadow",
          "displayName": "Shadow",
          "type": "object",
          "enabled": {
            "type": "custom"
          },
          "control": {
            "type": "shadow"
          },
          "default": {
            "enabled": false,
            "x": 0,
            "y": 2,
            "size": 4,
            "color": "rgba(0, 0, 0, 0.2)"
          },
          "style": true
        },
        {
          "name": "hover",
          "displayName": "Hover Effect",
          "type": "boolean",
          "default": true,
          "style": true
        },
        {
          "name": "borderRadius",
          "displayName": "Rounding",
          "type": "number",
          "control": {
            "type": "slider",
            "max": 18,
            "min": 0
          },
          "default": 4,
          "enabled": {
            "type": [
              "contained",
              "outlined",
              "custom"
            ]
          },
          "style": true
        },
        {
          "name": "buttonOpacity",
          "displayName": "Opacity",
          "type": "number",
          "control": {
            "type": "slider",
            "max": 100,
            "min": 0
          },
          "default": 100,
          "defaultValue": 100,
          "enabled": {
            "type": "custom"
          },
          "style": true
        },
        {
          "name": "shadow",
          "displayName": "Shadow",
          "type": "boolean",
          "default": false,
          "enabled": {
            "type": "contained"
          },
          "style": true
        },
        {
          "name": "upperCase",
          "displayName": "Uppercase",
          "type": "boolean",
          "default": true,
          "style": true
        },
        {
          "name": "action",
          "type": "action",
          "displayName": "Click Actions",
          "arguments": [
            {
              "type": "text",
              "displayName": "File URL"
            }
          ]
        }
      ]
    }
  ]
}
