{
  "displayName": "Oriented Diagram",
  "defaultWidth": 800,
  "defaultHeight": 600,
  "resizeX": true,
  "resizeY": true,
  "components": "./index.js",
  "icon": "./thumbnail.png",
  "props": [
    {
      "name": "nodes",
      "displayName": "Nodes Collection",
      "type": "list"
    },
    {
      "name": "edges",
      "displayName": "Edges Collection",
      "type": "list"
    },
    {
      "name": "globalOrientation",
      "displayName": "Diagram Orientation",
      "type": "text",
      "default": "TB",
      "control": {
        "type": "dropdown",
        "options": [
          {"label": "Top to Bottom", "value": "TB"},
          {"label": "Left to Right", "value": "LR"},
          {"label": "Bottom to Top", "value": "BT"},
          {"label": "Right to Left", "value": "RL"}
        ]
      }
    },
    {
      "name": "nodeId",
      "displayName": "Node ID",
      "type": "text",
      "role": "listItem",
      "reference": "nodes"
    },
    {
      "name": "nodeSize",
      "displayName": "Size",
      "type": "number",
      "default": 60,
      "role": "listItem",
      "reference": "nodes"
    },
    {
      "name": "nodeColor",
      "displayName": "Background Color",
      "type": "color",
      "default": "#ffffff",
      "role": "listItem",
      "reference": "nodes"
    },
    {
      "name": "nodeBorderColor",
      "displayName": "Border Color",
      "type": "color",
      "default": "#000000",
      "role": "listItem",
      "reference": "nodes"
    },
    {
      "name": "nodeBorderThickness",
      "displayName": "Border Thickness",
      "type": "number",
      "default": 2,
      "role": "listItem",
      "reference": "nodes"
    },
    {
      "name": "nodeBorderRadius",
      "displayName": "Border Radius",
      "type": "number",
      "default": 4,
      "role": "listItem",
      "reference": "nodes"
    },
    {
      "name": "nodeRotation",
      "displayName": "Rotation (degrees)",
      "type": "number",
      "default": 0,
      "role": "listItem",
      "reference": "nodes"
    },
    {
      "name": "legendType",
      "displayName": "Legend Position",
      "type": "text",
      "default": "none",
      "control": {
        "type": "dropdown",
        "options": [
          {"label": "None", "value": "none"},
          {"label": "Inside", "value": "inside"},
          {"label": "Text Outside", "value": "textOutside"},
          {"label": "Block Outside", "value": "blockOutside"}
        ]
      },
      "role": "listItem",
      "reference": "nodes"
    },
    {
      "name": "edgeId",
      "displayName": "Edge ID",
      "type": "text",
      "role": "listItem",
      "reference": "edges"
    },
    {
      "name": "edgeSource",
      "displayName": "Source Node",
      "type": "text",
      "role": "listItem",
      "reference": "edges"
    },
    {
      "name": "edgeTarget",
      "displayName": "Target Node",
      "type": "text",
      "role": "listItem",
      "reference": "edges"
    },
    {
      "name": "edgeColor",
      "displayName": "Color",
      "type": "color",
      "default": "#000000",
      "role": "listItem",
      "reference": "edges"
    },
    {
      "name": "edgeThickness",
      "displayName": "Thickness",
      "type": "number",
      "default": 2,
      "role": "listItem",
      "reference": "edges"
    },
    {
      "name": "edgeStyle",
      "displayName": "Line Style",
      "type": "text",
      "default": "solid",
      "control": {
        "type": "dropdown",
        "options": [
          {"label": "Solid", "value": "solid"},
          {"label": "Dotted", "value": "dotted"},
          {"label": "Dashed", "value": "dashed"}
        ]
      },
      "role": "listItem",
      "reference": "edges"
    },
    {
      "name": "edgeArrows",
      "displayName": "Show Arrows",
      "type": "boolean",
      "default": true,
      "role": "listItem",
      "reference": "edges"
    },
    {
      "name": "edgeRouting",
      "displayName": "Edge Type",
      "type": "text",
      "default": "straight",
      "control": {
        "type": "dropdown",
        "options": [
          {"label": "Straight", "value": "straight"},
          {"label": "Right Angle", "value": "orthogonal"}
        ]
      },
      "role": "listItem",
      "reference": "edges"
    },
    {
      "name": "edgeLabel",
      "displayName": "Label Text",
      "type": "text",
      "role": "listItem",
      "reference": "edges"
    }
  ]
}