{
  "displayName": "Tree View",
  "defaultWidth": 400,
  "defaultHeight": 600,
  "resizeX": true,
  "resizeY": true,
  "components": "./index.js",
  "icon": "./thumbnail.png",
  "props": [
    {
      "name": "treeData",
      "displayName": "Tree Data Collection",
      "type": "list"
    },
    {
      "name": "id",
      "displayName": "ID Selector",
      "type": "string",
      "role": "listItem",
      "reference": "treeData"
    },
    {
      "name": "parentId",
      "displayName": "Parent ID Selector",
      "type": "string",
      "role": "listItem",
      "reference": "treeData"
    },
    {
      "name": "treeItemLabel",
      "displayName": "Tree Item Label Selector",
      "type": "string",
      "role": "listItem",
      "reference": "treeData",
      "default": "Tree View Item"
    },
    {
      "name": "treeItemIcon",
      "displayName": "Tree Item Icon Selector",
      "type": "image",
      "role": "listItem",
      "reference": "treeData",
      "default": "folder"
    },
    {
      "name": "nodeIndentation",
      "displayName": "Node Indentation",
      "type": "number",
      "style": true,
      "default": 20
    },
    {
      "name": "nodeHeight",
      "displayName": "Node Height",
      "type": "number",
      "style": true,
      "default": 40
    },
    {
      "name": "fontSize",
      "displayName": "Font Size",
      "type": "number",
      "style": true,
      "default": 14
    },
    {
      "name": "textColor",
      "displayName": "Text Color",
      "type": "color",
      "style": true,
      "default": "#000000"
    },
    {
      "name": "backgroundColor",
      "displayName": "Background Color",
      "type": "color",
      "style": true,
      "default": "#ffffff00"
    }
  ],
  "childComponents": [
    {
      "name": "chevron",
      "displayName": "Chevron",
      "props": [
        {
          "name": "openChevronIcon",
          "displayName": "Open Chevron Icon",
          "type": "image",
          "default": "./chevron-down.png"
        },
        {
          "name": "closedChevronIcon",
          "displayName": "Closed Chevron Icon",
          "type": "image",
          "default": "./chevron-right.png"
        }
      ]
    }
  ]
}
