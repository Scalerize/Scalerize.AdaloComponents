{
  "displayName": "DataGrid",
  "defaultWidth": 600,
  "defaultHeight": 400,
  "resizeX": true,
  "resizeY": true,
  "components": "./index.js",
  "icon": "./thumbnail.png",
  "props": [
    {
      "name": "columns",
      "displayName": "Columns",
      "type": "list",
      "helpText": "A collection representing the list of columns to display. Please configure the \"Column Definition\" section to make the table work.\n\n"
    },
    {
      "name": "rows",
      "displayName": "Rows",
      "type": "list"
    }
  ],
  "childComponents": [
    {
      "name": "Column Definition",
      "role": "listItem",
      "reference": "columns",
      "props": [
        {
          "name": "field",
          "displayName": "Field",
          "type": "text",
          "helpText": "Name of the column of the \"rows\" collection to display"
        },
        {
          "name": "headerName",
          "displayName": "Displayed Field Name",
          "type": "text"
        },
        {
          "name": "width",
          "displayName": "Width",
          "type": "number",
          "default": 200,
          "helpText": "To divide the space equally between all columns, put 0"
        }
      ]
    },
    {
      "name": "Style",
      "props": [
        {
          "name": "borderColor",
          "displayName": "Border Color",
          "type": "color",
          "default": "rgba(224, 224, 224, 1)"
        },
        {
          "name": "borderThickness",
          "displayName": "Border Thickness",
          "type": "number",
          "control": {
            "type": "slider",
            "min": 0,
            "max": 10
          },
          "default": 1
        },
        {
          "name": "backgroundColor",
          "displayName": "Background Color",
          "type": "color",
          "default": "rgba(0, 0, 0, 0)"
        },
        {
          "name": "headerBackgroundColor",
          "displayName": "Header Background Color",
          "type": "color",
          "default": "rgba(0, 0, 0, 0)"
        },
        {
          "name": "foregroundColor",
          "displayName": "Text Color",
          "type": "color",
          "default": "rgba(0, 0, 0, 0.87)"
        },
        {
          "name": "borderType",
          "displayName": "Border Type",
          "type": "text",
          "default": "rows",
          "control": {
            "type": "menu",
            "options": [
              {
                "value": "rows",
                "label": "Horizontal"
              },
              {
                "value": "rows-and-cols",
                "label": "Horizontal and vertical"
              }
            ]
          }
        },
        {
          "name": "stripped",
          "displayName": "Stripped",
          "type": "boolean",
          "default": false
        },
        {
          "name": "tableHeight",
          "displayName": "Table Height",
          "type": "text",
          "default": "auto",
          "control": {
            "type": "menu",
            "options": [
              {
                "value": "auto",
                "label": "Auto"
              },
              {
                "value": "manual",
                "label": "Component Height"
              }
            ]
          }
        },
        {
          "name": "density",
          "displayName": "Density",
          "type": "text",
          "default": "standard",
          "control": {
            "type": "menu",
            "options": [
              {
                "value": "compact",
                "label": "Compact"
              },
              {
                "value": "standard",
                "label": "Standard"
              }
            ]
          }
        }
      ]
    }
  ]
}
