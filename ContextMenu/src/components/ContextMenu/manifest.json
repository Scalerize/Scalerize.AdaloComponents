{
  "displayName": "Context Menu",
  "defaultWidth": 24,
  "defaultHeight": 24,
  "resizeX": false,
  "resizeY": false,
  "components": "./index.js",
  "icon": "./thumbnail.png",
  "props": [
    {
      "name": "backgroundColor",
      "displayName": "Menu Background Color",
      "type": "color",
      "default": "#FFFFFF"
    },
    {
      "name": "textColor",
      "displayName": "Text Color",
      "type": "color",
      "default": "#000000"
    },

    {
      "name": "menuBorderRadius",
      "displayName": "Menu Border Radius",
      "type": "number",
      "default": 5,
      "control": {
        "type": "slider",
        "min": 0,
        "max": 20
      }
    },
    {
      "name": "menuShadowColor",
      "displayName": "Menu Shadow Color",
      "type": "color",
      "default": "#000000"
    },
    {
      "name": "menuShadowOpacity",
      "displayName": "Menu Shadow Opacity",
      "type": "number",
      "default": 25,
      "control": {
        "type": "slider",
        "min": 1,
        "max": 100,
        "step": 1
      }
    }
  ],
  "childComponents": [
    {
      "name": "icon",
      "displayName": "Icon",
      "props": [
        {
          "name": "iconName",
          "displayName": "Trigger Icon Name",
          "type": "icon",
          "default": "more-vert"
        },
        {
          "name": "iconColor",
          "displayName": "Trigger Icon Color",
          "type": "color",
          "default": "#000000"
        },
        {
          "name": "iconSize",
          "displayName": "Trigger Icon Size",
          "type": "number",
          "default": 24,
          "control": {
            "type": "slider",
            "min": 12,
            "max": 48
          }
        }
      ]
    },
    {
      "name": "menuItem1",
      "displayName": "Menu Item 1",
      "props": [
        {
          "name": "enabled",
          "type": "boolean",
          "default": true
        },
        {
          "name": "label",
          "displayName": "Label",
          "type": "text",
          "default": "Option 1"
        },
        {
          "name": "iconName",
          "displayName": "Icon",
          "type": "text",
          "default": "home"
        },
        {
          "name": "iconColor",
          "displayName": "Icon Color",
          "type": "color",
          "default": "#000000"
        },
        {
          "name": "action",
          "displayName": "Action",
          "type": "action"
        }
      ]
    },
    {
      "name": "menuItem2",
      "displayName": "Menu Item 2",
      "props": [
        {
          "name": "enabled",
          "type": "boolean",
          "default": true
        },
        {
          "name": "label",
          "displayName": "Label",
          "type": "text",
          "default": "Option 2"
        },
        {
          "name": "iconName",
          "displayName": "Icon",
          "type": "text",
          "default": "settings"
        },
        {
          "name": "iconColor",
          "displayName": "Icon Color",
          "type": "color",
          "default": "#000000"
        },
        {
          "name": "action",
          "displayName": "Action",
          "type": "action"
        }
      ]
    },
    {
      "name": "menuItem3",
      "displayName": "Menu Item 3",
      "props": [
        {
          "name": "enabled",
          "type": "boolean",
          "default": false
        },
        {
          "name": "label",
          "displayName": "Label",
          "type": "text",
          "default": "Option 3"
        },
        {
          "name": "iconName",
          "displayName": "Icon",
          "type": "text",
          "default": "info"
        },
        {
          "name": "iconColor",
          "displayName": "Icon Color",
          "type": "color",
          "default": "#000000"
        },
        {
          "name": "action",
          "displayName": "Action",
          "type": "action"
        }
      ]
    },
    {
      "name": "menuItem4",
      "displayName": "Menu Item 4",
      "props": [
        {
          "name": "enabled",
          "type": "boolean",
          "default": false
        },
        {
          "name": "label",
